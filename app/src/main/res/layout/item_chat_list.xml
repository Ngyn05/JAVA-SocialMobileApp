<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_chat_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_account_circle"/>

    <TextView
        android:id="@+id/username_chat_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image_chat_list"
        android:layout_marginStart="12dp"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/last_message_chat_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image_chat_list"
        android:layout_below="@+id/username_chat_list"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="This is the last message"
        android:maxLines="1"
        android:ellipsize="end"/>

    <View
        android:id="@+id/unread_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/unread_indicator_background"
        android:visibility="gone" />

</RelativeLayout>