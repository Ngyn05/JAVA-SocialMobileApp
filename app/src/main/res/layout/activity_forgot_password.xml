<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".auth.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/back_button_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_arrow_back" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitEnd"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Đặt lại mật khẩu"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgot_password_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_password_title"
        android:layout_marginTop="8dp"
        android:text="Nhập email của bạn để nhận liên kết đặt lại mật khẩu." />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_password_subtitle"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_background"
        android:hint="Nhập email của bạn"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_input"
        android:layout_marginTop="32dp"
        android:backgroundTint="#D32F2F"
        android:text="Gửi liên kết đặt lại"
        android:textColor="@android:color/white" />

</RelativeLayout>